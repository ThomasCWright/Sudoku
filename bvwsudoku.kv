<PrintScreen>:
    BoxLayout:
        orientation: 'vertical'
        Image:
            id: im
            size_hint: 0.9, 0.9
            pos_hint: {'center_x': .5, 'center_y': .5}
            source: 'blank_9x9.jpg'
            allow_stretch: True
        # #:import platform kivy.utils.platform
        # FileChooserListView:
        #     id: fc
        #     rootpath: root.rootpath if platform == 'android' else '/'
        Button:
            pos_hint: {'center_x': .5, 'center_y': .5}
            size_hint: None, 0.1
            width: min([im.width,im.height])
            text: 'Print'
            on_press: root.print()



