<PrintScreen>:
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.9,0.9
        # canvas:
        #     Color:
        #         rgba:  [0,1,0,1]
        #     Rectangle:
        #         size: self.size
        Image:
            id: im
            size_hint: 0.9, 0.9
            pos_hint: {'center_x': .5, 'center_y': .5}
            source: 'blank_9x9.jpg'
            allow_stretch: True

        FloatLayout:
            size_hint: 1, 0.1
            # canvas:
            #     Color:
            #         rgba:  [0,0,1,1]
            #     Rectangle:
            #         size: self.size
            Button:
                id: but_print
                pos_hint: {'center_x': .5, 'center_y': .5}

                size_hint: None, 0.9
                # width: min([im.width,im.height])
                text: 'Print'
                on_press: root.print()

            #:import sys sys
            Button:
                id: but_quit
                pos_hint: {'right': 1, 'center_y': .5}
                size_hint: None, 0.9
                # width: min([im.width,im.height])
                height: but_print.height
                text: 'Quit'
                on_press: sys.exit(0)




